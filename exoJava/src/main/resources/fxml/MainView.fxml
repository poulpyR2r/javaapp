<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.GeoController">
    <!-- Conteneur principal -->
    <Pane fx:id="rootPane" prefWidth="400" prefHeight="300" style="-fx-border-color: #ccc; -fx-padding: 20;">
        <!-- Éléments UI -->
        <VBox spacing="10" alignment="CENTER">
            <Label fx:id="locationLabel" text="Location will be shown here" />
            <Button fx:id="getLocationButton" text="Get Location" />
            <Button fx:id="takePhotoButton" text="Take Photo" />
            <Button fx:id="startRecordingButton" text="Start Audio Recording" />
            <Button fx:id="stopRecordingButton" text="Stop Audio Recording" />  
            <Button fx:id="recordKeyboardButton" text="Record Keyboard Input" />
        </VBox>
    </Pane>
</VBox>
